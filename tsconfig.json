{
    "compilerOptions": {
        "lib": ["es5", "es6"],
        "target": "es6",
        "esModuleInterop": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "./build",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "skipLibCheck": true,
        "typeRoots": ["./src/interface", "./node_modules/@types"]
    }
}
