{
    "compilerOptions": {
        "lib": ["es2017"],
        "target": "es2017",
        "esModuleInterop": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "./build",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "skipLibCheck": true,
        "typeRoots": ["./src/interface", "./node_modules/@types"]
    },
    "exclude": ["node_modules", "test"]
}
